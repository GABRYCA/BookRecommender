<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="30" styleClass="splash-container">

    <!-- Logo con effetto -->
    <VBox alignment="CENTER" spacing="10">
        <ImageView fx:id="logoImage" fitWidth="250" preserveRatio="true" styleClass="splash-logo" />

        <!-- Titolo principale -->
        <Label text="Book Recommender" styleClass="splash-title" />

        <!-- Sottotitolo -->
        <Label text="Sistema Intelligente di Raccomandazione Libri" styleClass="splash-subtitle" />
    </VBox>

    <!-- Separatore visivo -->
    <Region styleClass="splash-separator" />

    <!-- Container per la barra di caricamento -->
    <VBox alignment="CENTER" spacing="15" styleClass="splash-loading-container">
        <!-- Barra di caricamento moderna -->
        <ProgressBar fx:id="progressBar" progress="0" styleClass="splash-progress-bar" />

        <!-- Stato del caricamento -->
        <Label fx:id="statusLabel" text="Inizializzazione in corso..." styleClass="splash-status" />
    </VBox>

    <!-- Footer con versione -->
    <Region styleClass="splash-separator-small" />
    <Label text="v1.0 â€¢ Powered by Riccardo-Coder and AnonymousGCA" styleClass="splash-footer" />

</VBox>